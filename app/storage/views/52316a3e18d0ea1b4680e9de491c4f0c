<div class="row deal-popular">


	<?php foreach(Product::getMostPopular() as $p): ?>
		<div class="col-md-4 col-sm-4">
			<?php if(isset($p->pictures[0])): ?>

				<a href="<?php echo URL::to('product/'.$p->slug); ?>">
					<img src='<?php echo URL::to($p->pictures[0]->picture->url("medium")); ?>' alt="most popular service" title="most popular service">
				</a>

			<?php endif; ?>
			
			<h4>
			<a href="<?php echo URL::to('product/'.$p->slug); ?>"> 
			<?php echo $p->product_name; ?> <br>
			
			<?php if($p->discounted_price > 0): ?>
				<span>$<?php echo number_format($p->discounted_price, 2); ?></span>
			<?php else: ?>
				<span class="free">$0.00</span>
			<?php endif; ?>
			 
			</a></h4>
			<ul>
				<li><?php echo $p->getLeftSaleDays(); ?> days</li>
				<li><a href="<?php echo URL::to('products/category/'.$p->category->slug); ?>"><?php echo $p->category->category; ?></a></li>
			</ul>
		</div>
	<?php endforeach; ?>

</div>